# Register icons
#                                          î˜¦
register_icon "GO_ICON"  'Go'  ''  ''  ''  $'\uE626'

################################################################
# GO prompt
prompt_go_version() {
  local go_version
  local go_path
  go_version=$(go version 2>/dev/null | sed -E "s/.*(go[0-9.]*).*/\1/")
  go_path=$(go env GOPATH 2>/dev/null)

  if [[ -n "$go_version" && "${PWD##$go_path}" != "$PWD" ]]; then
    serialize_segment "$0" "" $1 "$2" $3 "green" "grey93" "$go_version" "GO_ICON"
  fi
}
