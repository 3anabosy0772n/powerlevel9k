# Register icons
#                                                                               
register_icon "TEST_ICON"  ''  $'\uE891'  $'\uF291'  '\u'$CODEPOINT_OF_AWESOME_BUG  $'\uF188'

# Source test stats script
source $p9k_directory/segments/developer/test_stats.p9k

################################################################
# Symfony2-PHPUnit test ratio
prompt_symfony2_tests() {
  if [[ (-d src && -d app && -f app/AppKernel.php) ]]; then
    local code_amount tests_amount
    code_amount=$(ls -1 src/**/*.php | grep -vc Tests)
    tests_amount=$(ls -1 src/**/*.php | grep -c Tests)

    build_test_stats "$0" "$1" $2 $3 "$code_amount" "$tests_amount" "SF2" 'TEST_ICON'
  fi
}
